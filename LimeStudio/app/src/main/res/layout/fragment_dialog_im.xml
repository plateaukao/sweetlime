<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/setup_im_restore_learning_data"
        android:id="@+id/chkSetupImRestoreLearning"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_weight="1"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/setup_im_backup_learning_data"
        android:id="@+id/chkSetupImBackupLearning"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_weight="1"
        android:checked="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/setup_im_dialog_custom"
        android:id="@+id/btnSetupImDialogCustom"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/btnSetupImDialogLoad6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/dialog_cancel"
        android:id="@+id/btnSetupImDialogCancel"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="10dp" />
</LinearLayout>